import React from 'react';
import { Link, Table } from 'components';

const {{.opts.Name.Pascalize}}Table = ({ data, onDelete }) => {
  function handleClick(e, tool) {
    e.preventDefault();

    if (window.confirm('Delete?')) {
      onDelete(tool);
    }
  }

  return (
    <Table
      keyExtractor={(row) => row.id}
      data={data}
      columns={[
      {{- range .opts.Attrs -}}
        {{- if ne .Name.Camelize.String "ID"  }}
        { key: '{{ .Name.Camelize }}', title: '{{ .Name.Pascalize }}' },
        {{- end }}
      {{- end }}
        { key: 'created_at', title: 'CreatedAt' },
        { key: 'updated_at', title: 'UpdatedAt' },
        {
          key: 'action',
          title: 'Action',
          render: (item) => (
            <div>
              <Link to={`/{{.opts.Name.Dasherize.Pluralize}}/${item.id}`}>View</Link>
              <Link to={`/{{.opts.Name.Dasherize.Pluralize}}/${item.id}/edit`}>Edit</Link>
              <a href="#" onClick={(e) => handleClick(e, item)}>
                Delete
              </a>
            </div>
          ),
        },
      ]}
    />
  );
};

export default {{.opts.Name.Pascalize}}Table;
